# ================================
# Vector Database Configuration
# ================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=  # Optional: for authentication

# ================================
# Ollama LLM Configuration
# ================================
OLLAMA_HOST=http://localhost:11434
LLM_MODEL=llama3.1:8b-instruct-fp16
VISION_MODEL=llama3.2-vision:11b
# Alternative vision models: qwen2-vl:7b, llava:13b

# ================================
# Embedding Models
# ================================
TEXT_EMBEDDING_MODEL=nomic-ai/nomic-embed-text-v1.5
VISION_EMBEDDING_MODEL=openai/clip-vit-large-patch14
# Alternative: laion/CLIP-ViT-H-14-laion2B-s32B-b79K

# ================================
# Whisper Configuration
# ================================
WHISPER_MODEL=large-v3
# Options: tiny, base, small, medium, large-v2, large-v3
WHISPER_DEVICE=cuda  # or cpu
USE_FASTER_WHISPER=true

# ================================
# OCR Configuration
# ================================
OCR_ENGINE=easyocr
# Options: easyocr, paddleocr, tesseract
OCR_LANGUAGES=["en"]

# ================================
# Video Processing
# ================================
FRAME_SAMPLING_RATE=1  # frames per second
MIN_SCENE_DURATION=2.0  # seconds
SLIDE_CHANGE_THRESHOLD=0.3  # similarity threshold
VIDEO_RESOLUTION=720  # downscale to this height

# ================================
# Text Chunking
# ================================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_CHUNK_SIZE=1024

# ================================
# Retrieval Configuration
# ================================
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.7
ENABLE_RERANKING=true
TEMPORAL_WINDOW=30  # seconds before/after

# ================================
# Agent Configuration
# ================================
MAX_AGENT_ITERATIONS=5
ENABLE_TEMPORAL_REASONING=true
ENABLE_CROSS_MODAL_LINKING=true
VERBOSE_LOGGING=true

# ================================
# API Keys (if using external services)
# ================================
# OPENAI_API_KEY=sk-...  # Optional: for fallback
# ANTHROPIC_API_KEY=sk-...  # Optional

# ================================
# Storage Paths
# ================================
DATA_DIR=./data
VIDEO_INPUT_DIR=./data/videos
PROCESSED_OUTPUT_DIR=./data/processed
INDEX_DIR=./data/index
CACHE_DIR=./data/cache

# ================================
# Logging
# ================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ================================
# Web UI
# ================================
GRADIO_PORT=7860
GRADIO_SHARE=false
